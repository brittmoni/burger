<div id='content'>
  <img src="../assets/images/hamburger.jpg" alt="hamburger">
  <h1>Eat Da Burger</h1>

  <div>
    {{#each data}}
      {{#unless this.devoured}}
        <p>{{this.id}}. {{this.burger_name}}</p>
        <button class="devour">Devour It!</button>
      {{/unless}}
    {{/each}}
  </div>

  <form action="/api/burgers" method="POST">
    <textarea type="text" name="burger"></textarea>
    <button type="submit">Submit</button>
  </form>
</div>